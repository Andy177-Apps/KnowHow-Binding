<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyFabOverlay">
        <item name="colorSecondary">@color/colorPrimaryDark</item>
    </style>

    <style name="MyFloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="materialThemeOverlay">@style/MyFabOverlay</item>
    </style>

    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="CalendarWidgetHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/dark_01</item>
    </style>

    <style name="CalendarWidgetweekDay">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/dark_01</item>
    </style>

    <style name="CalendarWidgetDate">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>


    <style name="WhiteBoldText">
        <item name="android:textSize">@dimen/user_detail_text_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
</resources>
