<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.wenbin.knowhowbinding.profile.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Eren"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="59dp"
            tools:layout_editor_absoluteY="81dp" />

        <TextView
            android:id="@+id/textView_share_navi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="編輯"
            android:onClick="@{() -> viewModel.navigateToEditProfile()}"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView_name" />

        <ImageView
            android:id="@+id/imageView_author_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_name"
            app:layout_goneMarginTop="16dp"
            app:srcCompat="@drawable/outline_person_outline_black_24dp" />

        <TextView
            android:id="@+id/textView_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="發訊息"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView_author_photo" />

        <TextView
            android:id="@+id/textView_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="關於"
            app:layout_constraintTop_toBottomOf="@id/textView_send_message"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/textView_myArticles"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="191dp" />

        <TextView
            android:id="@+id/textView_myArticles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的文章"
            android:onClick="@{() -> viewModel.navigateToMyArticle()}"
            app:layout_constraintEnd_toStartOf="@+id/textView_storage"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_about"
            app:layout_constraintTop_toTopOf="@+id/textView_about" />

        <TextView
            android:id="@+id/textView_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:onClick="@{() -> viewModel.navigateToMyCollect()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_myArticles"
            app:layout_constraintTop_toTopOf="@+id/textView_about" />

<!--        -->
        <TextView
            android:id="@+id/textView_identity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份"
            app:layout_constraintTop_toBottomOf="@id/textView_about"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/textView_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.userInfo.identity}"
            app:layout_constraintTop_toBottomOf="@+id/textView_identity_title"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/textView_talentedSubjects_title"
            />
<!--        -->
        <TextView
            android:id="@+id/textView_talentedSubjects_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拿手項目"
            app:layout_constraintTop_toBottomOf="@id/textView_identity"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/textView_talentedSubjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.userInfo.talentedSubjects}"
            app:layout_constraintTop_toBottomOf="@+id/textView_talentedSubjects_title"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/textView_talentedSubjects_title"
            />

        <TextView
            android:id="@+id/textView_interestedSubjects_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="感興趣的東西"
            app:layout_constraintStart_toStartOf="@id/textView_talentedSubjects_title"
            app:layout_constraintTop_toBottomOf="@id/textView_talentedSubjects"
            android:layout_marginTop="16dp"
            />

        <TextView
            android:id="@+id/textView_interestedSubjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{viewModel.userInfo.interestedSubjects}"
            app:layout_constraintTop_toBottomOf="@id/textView_interestedSubjects_title"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/textView_talentedSubjects"
            />

        <!--        -->
        <TextView
            android:id="@+id/textView_introduction_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自我介紹"
            app:layout_constraintTop_toBottomOf="@id/textView_interestedSubjects"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/textView_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.userInfo.introduction}"
            app:layout_constraintTop_toBottomOf="@+id/textView_introduction_title"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/textView_talentedSubjects_title"
            />
        <!--        -->

        <TextView
            android:id="@+id/textView_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="綜合評價"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_introduction"
            android:layout_marginTop="32dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:ShowComment="@{viewModel.comment}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/textView_comment_title"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>