<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="article"
            type="com.wenbin.knowhowbinding.data.Article" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView_author_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="16dp"
            app:srcCompat="@drawable/outline_person_outline_black_24dp" />

        <TextView
            android:id="@+id/textView_author_name"
            android:layout_width="46dp"
            android:layout_height="15dp"
            android:layout_marginStart="16dp"
            android:hint="Wenbin"
            android:text="@{article.author.name}"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_author_photo"
            app:layout_constraintStart_toEndOf="@id/imageView_author_photo"
            app:layout_constraintTop_toTopOf="@+id/imageView_author_photo" />

        <TextView
            android:id="@+id/textView_city_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="地點"
            app:layout_constraintStart_toStartOf="@id/imageView_author_photo"
            app:layout_constraintTop_toBottomOf="@id/imageView_author_photo" />

        <TextView
            android:id="@+id/textView_description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="想說的話"
            app:layout_constraintStart_toStartOf="@id/imageView_author_photo"
            app:layout_constraintTop_toBottomOf="@id/textView_city_title" />


        <TextView
            android:id="@+id/textView_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Taipei"
            android:text="@{article.title}"
            app:layout_constraintStart_toEndOf="@id/textView_description_title"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView_city_title" />

        <TextView
            android:id="@+id/textView_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Hi Hi"
            android:text="@{article.content}"
            app:layout_constraintStart_toStartOf="@id/textView_description_title"
            app:layout_constraintTop_toBottomOf="@id/textView_description_title"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"

            />

        <TextView
            android:id="@+id/textView_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:hint="找學生"
            android:text="@{article.tag}"
            app:layout_constraintBottom_toBottomOf="@+id/textView_author_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView_author_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>