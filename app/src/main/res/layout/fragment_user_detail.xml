                    android:textColor="@color/dark_01"
                    android:layout_marginStart="@dimen/user_detail_margin_start"

                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/roboto"
                    app:layout_constraintStart_toEndOf="@id/divider_detail"
                    app:layout_constraintTop_toTopOf="@id/title_detail"
                    app:layout_constraintBottom_toBottomOf="@+id/title_detail"
                    />
                <!--                identity-->

                <TextView
                    android:id="@+id/title_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textSize="@dimen/user_detail_text_title"
