<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.wenbin.knowhowbinding.postarticle.PostArticleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文章標題"
            app:layout_constraintStart_toStartOf="@id/textView_category_title"
            app:layout_constraintTop_toTopOf="@id/button_send_article"
            />

        <EditText
            android:id="@+id/editText_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:text="@={viewModel.article.title}"
            app:layout_constraintStart_toStartOf="@id/textView_category_title"
            app:layout_constraintTop_toBottomOf="@id/textView_article_title"
            android:layout_marginTop="16dp"
            />

        <Button
            android:id="@+id/button_send_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送出文章"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:id="@+id/textView_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="類別"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/editText_title"
            android:layout_marginTop="16dp"
            />

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/category_array"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@id/editText_description"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/textView_category_title"
            app:layout_constraintTop_toBottomOf="@id/textView_category_title" />

        <TextView
            android:id="@+id/textView_city_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地點"
            app:layout_constraintStart_toStartOf="@id/textView_category_title"
            app:layout_constraintTop_toBottomOf="@id/spinner_category"
            android:layout_marginTop="16dp"

            />

        <EditText
            android:id="@+id/editText_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            app:layout_constraintStart_toStartOf="@id/textView_category_title"
            app:layout_constraintTop_toBottomOf="@id/textView_city_title" />

        <TextView
            android:id="@+id/textView_interestedSubject_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="應徵科目"
            app:layout_constraintStart_toStartOf="@id/textView_category_title"
            app:layout_constraintTop_toBottomOf="@id/editText_city"
            android:layout_marginTop="16dp"
            />

        <EditText
            android:id="@+id/editText_interestedSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            app:layout_constraintStart_toStartOf="@id/textView_category_title"
            app:layout_constraintTop_toBottomOf="@id/textView_interestedSubject_title"
            android:layout_marginTop="16dp"
            />

        <TextView
            android:id="@+id/textView_description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教學形式"
            app:layout_constraintStart_toStartOf="@id/textView_category_title"
            app:layout_constraintTop_toBottomOf="@id/editText_interestedSubject"
            android:layout_marginTop="16dp"
            />

        <EditText
            android:id="@+id/editText_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:text="Name"
            app:layout_constraintStart_toStartOf="@id/textView_category_title"
            app:layout_constraintTop_toBottomOf="@id/textView_description_title"
            android:layout_marginTop="16dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>